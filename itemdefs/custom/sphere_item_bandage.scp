


// SAYUA colour, talkmode, font, lang_id, text
[FUNCTION FUNC_BANDAGE_DANGER_MSG]
// SAYUA 020,10,03,TRK * <ARGS> *
SAYUA 020,0,0,TRK * <ARGS> *
// MESSAGE @020,,1,1 * <ARGS> *

[FUNCTION FUNC_BANDAGE_SUCCESS_MSG]
// SAYUA 048,10,03,TRK * <ARGS> *
SAYUA 048,0,0,TRK * <ARGS> *
// MESSAGE @048,,1,1 * <ARGS> *



[TYPEDEF T_BANDAGE]
ON=@DClick
IF (<TOPOBJ> != <SRC>)
	SRC.FUNC_SYS_ERROR Sadece üzerinizdeyken kullanabilirsiniz.
	RETURN 1
ELSEIF (<SRC.FINDID.I_HEALING_MEMORY>)
	SRC.FUNC_SYS_ERROR Şu an zaten tedavi aşamasındasınız.
	RETURN 1
// ELSEIF (<SRC.ISUSESKILL Magery>)
	// SRC.FUNC_SYS_ERROR Büyü yaparken bandaj kullanamazsınız.
	// RETURN 1
ELSEIF (<SRC.FLAGS>&STATF_DEAD|STATF_STONE|STATF_FREEZE)
	SRC.FUNC_SYS_ERROR Şu anki durumunuzda kullanamazsınız.
	RETURN 1
ELSEIF (<SRC.TAG0.HEALDELAY> > <SERV.TIME>)
	SRC.FUNC_SYS_ERROR Bandajları şu an kullanamazsınız.
	RETURN 1
ENDIF
TARGET
SRC.SYSMESSAGE <SERV.SKILL.17.PROMPT_MSG>
// SRC.FUNC_SYS_DEF Kimi tedavi etmek istiyorsun?
RETURN 1

ON=@TARGON_ITEM
SRC.FUNC_SYS_ERROR <def.msg_invalid_target_tr>
RETURN 1

on=@TARGON_GROUND
SRC.FUNC_SYS_ERROR <def.msg_invalid_target_tr>
RETURN 1

ON=@TARGON_CANCEL
SRC.FUNC_SYS_DEF Bandaj hedefi iptal edildi.

ON=@TARGON_CHAR
IF !(<SRC.RESTEST 1 I_BANDAGE>)
	SRC.FUNC_SYS_ERROR Bandajınız yok.
	RETURN 1
	
ELSEIF (<TOPOBJ> != <SRC>)
	SRC.FUNC_SYS_ERROR Sadece üzerinizdeyken kullanabilirsiniz.
	RETURN 1
	
// ELSEIF (<SRC.ISUSESKILL MAGERY>)
	// SRC.FUNC_SYS_ERROR Büyü yaparken bandaj kullanamazsınız.
	// RETURN 1
	
ELSEIF (<SRC.FINDID.I_HEALING_MEMORY>)
	SRC.FUNC_SYS_ERROR Şu an zaten tedavi aşamasındasınız.
	RETURN 1
	
ELSEIF (<SRC.FLAGS>&STATF_DEAD|STATF_STONE|STATF_FREEZE)
	SRC.FUNC_SYS_ERROR Şu anki durumunuzda kullanamazsınız.
	RETURN 1
	
ELSEIF (<SRC.TAG0.HEALDELAY> > <SERV.TIME>)
	SRC.FUNC_SYS_ERROR Bandajlari su an kullanamazsiniz.
	RETURN 1
	
ELSEIF (<EVAL <SRC.P.Z>+8> < <SRC.TARG.P.Z>) 
	SRC.FUNC_SYS_ERROR <src.targ.name> ile aynı yükselikte değilsin.
	RETURN 1
	
ELSEIF (<EVAL <SRC.P.Z>-8> > <SRC.TARG.P.Z>)
	SRC.FUNC_SYS_ERROR <src.targ.name> ile aynı yükselikte değilsin.
	RETURN 1
	
ELSEIF !(<SRC.CANSEELOS <SRC.TARG>>)
	SRC.FUNC_SYS_ERROR <SRC.TARG.NAME> isimli varlığı göremiyorsunuz.
	RETURN 1
	
ELSEIF (<SRC.DISTANCE <SRC.TARG>> > 4)
	SRC.FUNC_SYS_ERROR <SRC.TARG.NAME> yeterince yakınınızda değil.
	RETURN 1
	
ELSEIF !(<SRC.TARG.ISHEALABLECHAR>)
	SRC.FUNC_SYS_ERROR Bu varlığı iyileştiremezsiniz.
	RETURN 1
ENDIF

IF (<SRC.TARG.HITS> < <SRC.TARG.STR>)
	LOCAL.YARALI=1
ELSEIF (<SRC.TARG.FLAGS>&STATF_POISONED)
	LOCAL.YARALI=1
ELSEIF (<SRC.TARG.FINDID.I_BLEEDING>)
	LOCAL.YARALI=1
ELSEIF (<SRC.TARG.FINDID.I_BLEEDING_WOLF>)
	LOCAL.YARALI=1
ENDIF

IF (<LOCAL.YARALI> != 1)
	SRC.FUNC_SYS_ERROR <QVAL (<SRC.TARG> != <SRC>) ? <SRC.TARG.NAME> tedaviye ihtiyaç duymuyor. : Tedaviye ihtiyacınız yok.>
	IF (<SRC.TARG.HITS> > <SRC.TARG.STR>)
		SRC.TARG.HITS = <SRC.TARG.STR>
	ENDIF
	RETURN 1
ENDIF


// PLAYER İSE
IF (<SRC.TARG.ISPLAYER>) && !(<SRC.TARG.NPC>)

	IF (<SRC.TARG.UID> != <SRC>)
		// ATANIN GUİLDİ YOKSA VE ATILANIN VARSA
		IF !(<SRC.GUILD>) && (<SRC.TARG.GUILD>)  
			SRC.FUNC_SYS_ERROR Guild üyesi olmayanlar guild üyelerini tedavi edemezsiniz.
			RETURN 1
		ENDIF
		// ATANIN ve ATILANIN GUİLDİ VARSA VE ATILAN İLE AYNI DEĞİLSE
		IF (<SRC.GUILD>) && (<SRC.TARG.GUILD>)  
			IF (<SRC.TARG.GUILD.ALIGN> != <SRC.GUILD.ALIGN>)
				SRC.FUNC_SYS_ERROR <SRC.TARG.GUILD.ALIGNTYPE> guildi <SRC.GUILD.ALIGNTYPE> guild üyelerini tedavi edemezsiniz.
				RETURN 1
			ENDIF	
		ENDIF	
	ENDIF
		
	// PLAYER ÖLÜ İSE
	IF (<SRC.TARG.FLAGS>&STATF_DEAD)
		
		IF !(<SRC.RESTEST 5 i_bandage>)
			SRC.FUNC_SYS_ERROR Varlıkları canlandırabilmeniz için en az 5 bandajınız olmalı.
			RETURN 1
		ELSEIF (<SRC.TARG.REGION.FLAGS>&REGION_FLAG_HOUSE)
			SRC.FUNC_SYS_ERROR <SRC.TARG.NAME> ev içinde olduğu için hayata döndüremezsiniz.
			RETURN 1
		ELSEIF (<SRC.TARG.MEMORYFINDTYPE.MEMORY_TOWN>) && !(<SRC.MEMORYFINDTYPE.MEMORY_TOWN>)
			SRC.FUNC_SYS_ERROR Faction uyelerini iyilestiremezsiniz.
			RETURN 1
		ENDIF
		
		SRC.SAYUA 048,0,0,0 * <SRC.TARG.NAME> isimli oyuncuyu diriltir *
		SRC.TARG.SAYUA 048,0,0,0 * <SRC.NAME> sayesinde hayata doner *
		SRC.TARG.RESURRECT 2
		SRC.TARG.HITS = <QVAL (<SRC.TARG.STR> >= <SERV.HitPointPercentOnRez>)?<SERV.HitPointPercentOnRez>:1>
		SRC.TARG.EFFECT 3,0376A,1,16,0,0,0
		SRC.CONSUME 10 i_bandage
		SRC.FUNC_SYS_SUCCESS <SRC.TARG.NAME> isimli oyuncuyu dirilttin.

	// PLAYER CANLI İSE
	ELSE
		SERV.NEWITEM I_HEALING_MEMORY,1,<SRC>,1
		NEW.LINK <SRC.TARG>	
		SRC.FUNC_SYS_SUCCESS <QVAL (<SRC> == <SRC.TARG>)?Tedaviye başladın:<SRC.TARG.NAME> isimli oyuncuyu tedavi etmeye başladın>.
	ENDIF
	
// Player değile
ELSE
	SERV.NEWITEM I_HEALING_MEMORY,1,<SRC>,1
	NEW.LINK <SRC.TARG>	
	SRC.FUNC_SYS_SUCCESS <QVAL (<SRC> == <SRC.TARG>)?Tedaviye başladın:<SRC.TARG.NAME> isimli varlığı tedavi etmeye başladın>.
ENDIF

SRC.FACE <SRC.TARG>
RETURN 1




[ITEMDEF I_HEALING_MEMORY]
DEFNAME=I_HEALING_MEMORY
ID=I_MEMORY
TYPE=T_EQ_SCRIPT
NAME=Healing
ON=@CREATE
ATTR=ATTR_DECAY|ATTR_NEWBIE

ON=@EQUIP
SRC.EVENTS +E_HEALING
SRC.ACTION -1
SRC.SKILL FAIL
SRC.FREEZETIME_CUSTOM 30
SRC.ANIM 17
TIMER=5
// SRC.FUNC_POTIONCOOLDOWN_OPENDLG <SERV.ITEMDEF.I_BANDAGE.ID>,50

ON=@UNEQUIP
SRC.EVENTS -E_HEALING
SRC.FREEZETIME_CUSTOM 0

ON=@TIMER
IF (<LINK.HITS> < <LINK.STR>)
	LOCAL.YARALI=1
ELSEIF (<LINK.FLAGS>&STATF_POISONED)
	LOCAL.YARALI=1
ELSEIF (<LINK.FINDID.I_BLEEDING>)
	LOCAL.YARALI=1
ELSEIF (<LINK.FINDID.I_BLEEDING_WOLF>)
	LOCAL.YARALI=1
ELSE
	LOCAL.YARALI=0
ENDIF

IF (<CONT.FLAGS>&STATF_STONE)
	CONT.FUNC_SYS_ERROR Şu anki durumunuzda kullanamazsınız.
	REMOVE
	RETURN 1
	
ELSEIF !(<CONT.RESTEST 1 I_BANDAGE>)
	CONT.FUNC_SYS_ERROR Bandajiniz yok.
	REMOVE
	RETURN 1
	
ELSEIF !(<LOCAL.YARALI>)
	CONT.FUNC_SYS_ERROR <QVAL (<LINK> != <CONT>) ? <LINK.NAME> tedaviye ihtiyaç duymuyor. : Tedaviye ihtiyacınız yok.>
	REMOVE
	RETURN 1

ELSEIF (<LINK.FLAGS>&STATF_DEAD)
	CONT.FUNC_SYS_ERROR <link.name> tedavi esnasinda hayatini kaybetti.
	REMOVE
	RETURN 1
	
ELSEIF (<EVAL <CONT.P.Z>+8> < <LINK.P.Z>) 
	CONT.FUNC_SYS_ERROR <LINK.name> ile aynı yükselikte değilsin.
	REMOVE
	RETURN 1
	
ELSEIF (<EVAL <CONT.P.Z>-8> > <LINK.P.Z>)
	CONT.FUNC_SYS_ERROR <LINK.name> ile aynı yükselikte değilsin.
	REMOVE
	RETURN 1
	
ELSEIF !(<LINK.ISHEALABLECHAR>)
	CONT.FUNC_SYS_ERROR Bu varlığı iyileştiremezsiniz.
	REMOVE
	RETURN 1
ENDIF

IF (<LINK.FLAGS>&STATF_POISONED) // ZEHİR İYİLEŞTİR

	IF !(RAND(5) == 1)
		// Success
		LINK.CURE 100.0
		LINK.EFFECT 3,0376A,2,10,1		
		CONT.Func_Heal_Poison_SuccessMsg <LINK>
	ELSE
		// Fail
		CONT.Func_Heal_Poison_FailMsg <LINK>
	ENDIF
	
	
ELSEIF (<LINK.FINDID.I_BLEEDING>) // YARA İYİLEŞTİR

	IF !(RAND(5) == 1)
		// Success
		LINK.FINDID.I_BLEEDING.REMOVE
		LINK.EFFECT 3,0376A,2,10,1	
		CONT.Func_Heal_Bleeding_SuccessMsg <LINK>
	ELSE
		// Fail
		CONT.Func_Heal_Bleeding_FailMsg <LINK>
	ENDIF

	
ELSEIF (<LINK.FINDID.I_BLEEDING_WOLF>) // WOLF YARA İYİLEŞTİR

	IF !(RAND(5) == 1)
		// Success
		LINK.FINDID.I_BLEEDING_WOLF.REMOVE
		LINK.EFFECT 3,0376A,2,10,1	
		CONT.Func_Heal_Bleeding_SuccessMsg <LINK>
	ELSE
		// Fail
		CONT.Func_Heal_Bleeding_FailMsg <LINK>
	ENDIF
	
ELSE // TEDAVİ ET

	// LOCAL.OLDHITS = <CONT.HITS>
	// LOCAL.HEAL1 <EVAL (1000 / <R20,50>) + (1000 / 50)>
	// LOCAL.HEAL2 <EVAL (<LOCAL.HEAL1> + <R3,10>)>	
	LOCAL.HEAL2 <R35,40>
	
	LINK.HITS +=<LOCAL.HEAL2>
	IF (<LINK.HITS> > <LINK.STR>)
		LINK.HITS = <LINK.STR>
	ENDIF
	
	CONT.Func_Heal_SuccessMsg <LINK>
	LINK.EFFECT 3,0376A,2,10,1
	
ENDIF

CONT.TAG0.HEALDELAY = <EVAL <SERV.TIME> + <QVAL (<CONT.DEX> > 35)?80:100>>
CONT.CONSUME 1 I_BANDAGE
REMOVE
RETURN 1




[events e_healing]
ON=@LOGOUT
IF (<SRC.FINDID.I_HEALING_MEMORY>)
	SRC.FINDID.I_HEALING_MEMORY.REMOVE
ENDIF

