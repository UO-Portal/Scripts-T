	IF (<FINDID.I_HEALING_MEMORY>)
		FINDID.I_HEALING_MEMORY.REMOVE
	ENDIF
	FUNC_BANDAGE_DANGER_MSG bandajları yırtılır
	TAG0.HEALDELAY=
ENDIF






// Messages functions


// Heal
[FUNCTION Func_Heal_SuccessMsg]
REF1=<ARGS>
IF (<UID> == <REF1>)
	FUNC_BANDAGE_SUCCESS_MSG kendini tedavi eder
ELSE
	FUNC_BANDAGE_SUCCESS_MSG <REF1.name> isimli varlığı iyileştirir
	// REF1.TAG0.HEALDELAY=
	REF1.FUNC_BANDAGE_SUCCESS_MSG <NAME> tarafından iyileştirilir
ENDIF






// Bleeding

[FUNCTION Func_Heal_Bleeding_SuccessMsg]
REF1=<ARGS>
IF (<UID> == <REF1>)
	FUNC_BANDAGE_SUCCESS_MSG yarayı tedavi eder
ELSE
	FUNC_BANDAGE_SUCCESS_MSG <REF1.name> isimli varlığın yarasını iyileştirir
	REF1.FUNC_BANDAGE_SUCCESS_MSG <NAME> tarafından yarası iyileştirilir
ENDIF


[FUNCTION Func_Heal_Bleeding_FailMsg]
REF1=<ARGS>
IF (<UID> == <REF1>)
	FUNC_BANDAGE_DANGER_MSG yarayı iyileştiremez
ELSE
	FUNC_BANDAGE_DANGER_MSG <REF1.NAME> üzerindeki yarayı iyileştiremez
ENDIF






// Poison
[FUNCTION Func_Heal_Poison_SuccessMsg]
REF1=<ARGS>
IF (<UID> == <REF1>)
	FUNC_BANDAGE_SUCCESS_MSG zehiri iyileştirir
ELSE
	FUNC_BANDAGE_SUCCESS_MSG <REF1.name> isimli varlığın zehrini iyileştirir
	REF1.FUNC_BANDAGE_SUCCESS_MSG <NAME> tarafından zehri iyileştirilir
ENDIF


[FUNCTION Func_Heal_Poison_FailMsg]
REF1=<ARGS>
IF (<UID> == <REF1>)
	FUNC_BANDAGE_DANGER_MSG zehiri iyileştiremez
ELSE
	FUNC_BANDAGE_DANGER_MSG <REF1.NAME> üzerindeki zehiri iyileştiremez
ENDIF




